<div class="container" style = "padding: 3%;">
  <div class = "row align-items-start">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h2>Sign up</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="mb-3">
              <%= f.label :Email, class: "form-label" %>
              <%= f.input_field :email,
                          required: true,
                          autofocus: true,
                          class: "form-control",
                          input_html: { autocomplete: "email" }%>
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Name</label>
              <%= f.input_field :name,
                          autofocus: true,
                          class: "form-control", id: "exampleInputEmail1" %>
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">SƒêT</label>
              <%= f.input_field :phone,
                          autofocus: true,
                          class: "form-control", id: "exampleInputEmail1" %>
            </div>

            <div class="mb-3">
              <%= f.label :Password, class: "form-label" %>
              <%= f.input_field :password,
                          required: true,
                          class: "form-control",
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
            </div>

            <div class="mb-3">
              <%= f.label "Password confirmation", class: "form-label" %>
              <%= f.input_field :password_confirmation,
                          required: true,
                          class: "form-control",
                          input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="mb-3">
              <%= f.button :submit, "Sign up", class: "btn btn-success" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <div class="col">
      <%= image_tag "login.jpg", height: "5%" %>
    </div>
  </div>
</div>
