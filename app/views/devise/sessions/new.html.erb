<div class="container" style = "padding: 3%;">
  <div class = "row align-items-start">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h2>Log in</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :Email, class: "form-label" %>
              <%= f.input_field :email, required: false, autofocus: true, class: "form-control", input_html: { autocomplete: "email" } %>
            </div>
            <div class="mb-3">
              <%= f.label :Password, class: "form-label" %>
              <%= f.input_field :password, required: false, class: "form-control", input_html: { autocomplete: "current-password" } %>
            </div>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <div class="form-group" style="padding-top: 3%;">
              <%= f.button :submit, "Log in" , class: "btn btn-primary" %>
            </div>
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <div class="col">
      <%= image_tag "sign-up(1).png", height: "5%" %>
    </div>
  </div>
</div>
