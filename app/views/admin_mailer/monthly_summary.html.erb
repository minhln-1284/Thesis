<h2><%= t "monthly_mailer.month_summary" %></h2>

<h3><%= t "monthly_mailer.customer_summary" %></h3>

<table>
  <thead>
    <tr>
      <th><%= t "monthly_mailer.customer" %></th>
      <th><%= t "monthly_mailer.orders" %></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |key, value| %>
    <tr>
      <td><%= User.find_by(id: key).name %></td>
      <td><%= value %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<table>
  <thead>
    <tr>
      <th><%= t "monthly_mailer.product" %></th>
      <th><%= t "monthly_mailer.buy_count" %></th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |key, value| %>
    <tr>
      <td><%= Product.find_by(id: key).name %></td>
      <td><%= value %></td>
    </tr>
    <% end %>
  </tbody>
</table>
