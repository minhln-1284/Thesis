<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container px-4 px-lg-5">
    <%= link_to root_path, class: "navbar-brand" do %>
      Elite Shopping
      <i class="fa-regular fa-heart"></i>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span
        class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
        <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link active"%></li>
        <li class="nav-item"><a class="nav-link" href="#!">Contact</a></li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
            aria-expanded="false">Shop</a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><%= link_to "Men's", mens_path, class: "dropdown-item" %></li>
            <li><%= link_to "Woman's", womans_path, class: "dropdown-item" %></li>
          </ul>
        </li>
      </ul>
      <form class="d-flex">
        <%= link_to cart_path(id: 2), class: "btn btn-outline-dark" do %>
          <i class="bi-cart-fill me-1"></i>
          Cart
          <span class="badge bg-dark text-white ms-1 rounded-pill">
            <%= current_cart.values.count %>
          </span>
        <% end %>
      </form>
      <% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, style: "padding-left: 2%; color: black;" %>
        <%= link_to icon("fa-solid", "user"), edit_user_registration_path, style: "padding-left: 1%; color: black;" %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, style: "padding-left: 2%; color: black;" %>
      <% end %>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Launch demo modal
      </button>
    </div>
  </div>
</nav>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% @user = User.new %>
        <%= simple_form_for @user, url: user_session_path(@user), method: :post do |f| %>
          <div class="mb-3">
            <%= f.label :Email, class: "form-label" %>
            <%= f.input_field :email, required: false, autofocus: true, class: "form-control", input_html: { autocomplete: "email" } %>
          </div>
          <div class="mb-3">
            <%= f.label :Password, class: "form-label" %>
            <%= f.input_field :password, required: false, class: "form-control", input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="form-group" style="padding-top: 3%;">
            <%= f.button :submit, "Log in" , class: "btn btn-primary" %>
          </div>
        <% end %>
        <br>
        <%#= render "devise/shared/links" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
