<div style = "padding: 15px 0px">
  <div class = "container">
    <div class="row">
      <div class="col-sm-6">
        <div class="card mb-3">
          <div class="card-body">
            <p>
              <strong><%= t "admin.category.name" %></strong>
              <%= @category.name %>
            </p>

            <p>
              <strong><%= t "admin.category.parent" %></strong>
              <%= find_parent(@category) %>
            </p>

            <%= link_to t("admin.category.edit"), edit_admin_category_path(@category), class: "btn btn-primary"%> |
            <%= link_to t("admin.product.back"), admin_categories_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
