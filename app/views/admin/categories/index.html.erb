<div class="category-index-padding">
  <div class = "container">
    <div class="card">
      <div class="card-header">
        <h1><%= t "admin.category.categories" %></h1>
      </div>
      <div class="card-body">
        <%= link_to t("admin.category.new_category"), new_admin_category_path, class: "btn btn-outline-success"%>
        <table class = "table table-striped">
          <thead>
            <tr>
              <th><%= t "admin.category.name" %></th>
              <th><%= t "admin.category.parent" %></th>
              <th><%= t "admin.category.content" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @categories.includes([:category]) %>
          </tbody>
        </table>
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
