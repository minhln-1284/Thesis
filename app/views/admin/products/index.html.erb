<div class="category-index-padding">
  <div class = "container">
    <div class="card">
      <div class="card-header">
        <h1><%= t "admin.product.products" %></h1>
      </div>
      <div class="card-body">
        <div class="wrapper">
          <%= form_tag(admin_products_path, method: "get", class: "form-group") do %>
            <%= text_field_tag "name", nil, class: "form-control", style: "display: inline; width: 20%;" %>
            <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
        </div>
        <br>
        <%= render "search_form" %>
        <% if @products.empty? %>
          <h3>NO DATA</h3>
        <% else %>
        <table class = "table table-striped">
          <thead>
            <tr>
              <th><%= t "admin.product.name" %></th>
              <th><%= t "admin.product.price" %></th>
              <th><%= t "admin.product.quantity_in_stock" %></th>
              <th><%= t "admin.product.category" %></th>
              <th><%= t "admin.category.content" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @products %>
          </tbody>
        </table>
        <%== pagy_bootstrap_nav(@pagy) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
