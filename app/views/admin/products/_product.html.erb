<tr>
  <td><%= product.name %></td>
  <td><%= product.price %></td>
  <td><%= product.quantity_in_stock %></td>
  <td><%= category_name(product.category_id) %></td>
  <td><%= link_to icon("fa regular", "eye"), admin_product_path(product) %>
  <%= link_to icon("fa regular", "pen-to-square"), edit_admin_product_path(product), class: "td_custom" %>
  <%= link_to icon("fa regular", "trash"), admin_product_path(product), method: :delete, data: { confirm: t("admin.product.you_sure") } %>
  </td>
</tr>
