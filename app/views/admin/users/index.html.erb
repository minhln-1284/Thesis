<div class ="category-index-padding">
  <div class="container">
    <div class="card mb-3">
      <div class="card-header">
        <h2><%= t "admin.user.customer_month" %><i class="fa-solid fa-star fa-beat"
            id ="card_header_h2"></i></h2>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-sm-6">
              <% if @best == "No one" %>
                <%= @best %>
              <% else %>
                <div class="card text-white bg-danger mb-3">
                  <%= render "user_card", user: @best %>
                </div>
              <% end %>
          </div>
          <% if @best != "No one" %>
            <div class="col-sm-6">
              <div class="card text-white bg-success mb-3">
                <div class="card-body">
                  <h5 class="card-title">
                    <%= t "admin.user.sum_order" %>
                      <%= @best.orders.count %>
                  </h5>
                  <p class="card-text">
                    <%= count_delivered(@best.orders) %>
                  </p>
                  <p>
                    <%= count_shipping(@best.orders) %>
                  </p>
                  <%= link_to icon("fa regular", "eye" ), admin_user_path(@best), style: "color: white" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="card">
      <div class="card-header">
        <h1>
          <%= t "admin.user.users" %>
        </h1>
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>
                <%= t "admin.user.name" %>
              </th>
              <th class="align_column">
                <%= t "admin.user.order" %>
              </th>
              <th>
                <%= t "admin.user.latest_feedback" %>
              </th>
              <th class="align_column">
                <%= t "admin.user.details" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
