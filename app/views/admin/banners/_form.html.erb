<%= form_for [:admin, @banner] do |f| %>
  <div class="form-outline mb-4">
    <%= f.label :content, class:"form-label"%>
    <%= f.text_field :content, type: "text" , id: "form4Example1" , class: "form-control" %>
  </div>
  <div class="form-outline mb-4">
    <div>
      <%= f.file_field :image %>
    </div>
  </div>
  <%= f.submit t("submit"), class: "btn btn-primary btn-block mb-4", data: { confirm: t("admin.category.you_sure") } %>
<% end %>
