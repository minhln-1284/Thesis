<div class="container">
<div class="row">
<div class="col-sm-2">
  <div class="card">
    <div class="input-group mb-3">
 <%= search_form_for @search, url: mens_path,
                        html: { method: :get } do |f| %>
          <%= f.search_field :name_cont, class: "form-control"%>

          <%= f.submit t("submit"), style:"display: none;"%>

        <% end %>
  </div>
  </div>
</div>

<div class="col-sm-10">
<div class="container">

<div class="row">
<div class="col">
  <div class="dropdown-minh" style="padding-bottom: 1.5%;">
          <button class="dropbtn-minh btn btn-outline-dark"><%= t("static_pages.filter") %></button>
          <div class="dropdown-content-minh">
            <%= link_to "Newest", mens_path(q: {s: "created_at asc"}) %>
            <%= link_to "Oldest", mens_path(q: {s: "created_at desc"}) %>
          </div>
        </div>
</div>
<div class="col">

  </div>
</div>

    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @products.each do |p|%>
        <div class="col mb-5">
        <div class="zoom">
          <div class="card h-100">
            <!-- Product image-->

            <%= image_tag p.product_images.first.image, class: "card-img-top" %>

            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= p.name %></h5>
                <%= number_to_currency(p.price) %>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <%= form_with url: carts_path(id: p.id ), method: :post do |f| %>
                <fieldset>
                  <% if logged_in? %>
                    <%= f.hidden_field :quantily, value: 1, max: 10, min: Settings.carts.min_quantily %>
                    <input
                      type="submit"
                      name="submit"
                      value="Add to cart"
                      class="btn btn-outline-dark mt-auto"/>
                  <% else %>
                    <%= link_to "Add to cart", new_user_session_path, class: "btn btn-outline-dark" %>
                  <% end %>
                </fieldset>
              <% end %>
            </div>
          </div>
          </div>
        </div>
        <% end %>
    </div>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
</div>
</div>
</div>
